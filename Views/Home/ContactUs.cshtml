
@{
    ViewData["Title"] = "İletişim";
}

<h1>İletişim</h1>

<form asp-action="ContactUs">
    <div class="row">

        <div class="col-2">
            @Html.Label("lblAd", "Adınız")
        </div>
        <div class="col-5">
            @Html.TextBox("txtAd","","",new {@class = "form - control"})
        </div>

    </div>
    <div class="row mt-2">

        <div class="col-2">
            @Html.Label("lblSoyad", "Soyadınız")
        </div>
        <div class="col-5">
            @Html.TextBox("txtSoyad","","", new {@class = "form - control"})
        </div>

    </div>
    <div class="row mt-2">

        <div class="col-2">
            @Html.Label("lblTelefon", "Telefon")
        </div>
        <div class="col-5">
            @Html.TextBox("txtTelefon","","", new {@class = "form - control"})
        </div>

    </div>
    <div class="row mt-2">

        <div class="col-2">
            @Html.Label("lblMesaj", "Mesajınız")
        </div>
        <div class="col-5">
            @Html.TextArea("txtMesaj","",3,10, new {@class = "form - control",required="required"})
        </div>
        @*required ile bu alanın doldurulması zorunludur talebi oluşturabiliriz.*@
    </div>
    <div class="row mt-2 ">
        <div class="col-1">

        </div>
        <div class="col-1">
        </div>
        <div class="col-1">
            <input class="btn btn-dark" type="submit" value="Gönder" />
        </div>
    </div>
</form>


