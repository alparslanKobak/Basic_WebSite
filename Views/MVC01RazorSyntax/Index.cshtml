@{
    //Burası C#  kodu yazma alanıdır. View sayfalarında @ işareti ile C# kodu yazmaya razor syntax'ı denir.

    string adi = "Alparslan";
    string soyAdi = "KOBAK"; // C# değişkeni tanımlayabiliriz.
    string baslik = "MVC01 Razor Syntax";

    string[] isimler = { "Ali", "Veli", "Alp" }; // dizi tanımlayabiliriz.

   
}

<h1>
    @baslik
</h1>

<h2>Adı : @adi</h2>

<h3>Soyadı : @soyAdi</h3>

<h4>İsimler</h4>

@foreach (string ad in isimler)
{
    @ad
    <hr/>
}



@foreach(var ad in isimler)
{
    <h5>
        @ad
    </h5>
}

@for (int i = 0; i <=5; i++)
    {
        <h6>
            @i
        </h6>
    }